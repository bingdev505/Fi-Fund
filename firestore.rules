/**
 * @fileoverview Firestore Security Rules for the application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model. Users can only
 * create, read, update, and delete data associated with their own user ID.
 *
 * Data Structure:
 * All data is nested under /users/{userId}, ensuring that all collections are
 *scoped to individual users. This structure simplifies security rules and
 * prevents unauthorized data access.
 *
 * Key Security Decisions:
 * - User listing is explicitly denied.
 * - All data validation is skipped in this prototyping phase, except
 *   for ownership checks on the 'id' field.
 * - Read operations are generally restricted to the owner, though `get` requests
 *   to non-existent documents will still reach the backend to return a 404.
 * - All write operations require a verified, signed-in user.
 *
 * Denormalization for Authorization:
 * The 'userId' field is present on all documents to simplify ownership checks.
 * This avoids costly `get()` operations to parent documents.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Enforces access control for user profile documents. Only the user
     *              with the matching user ID can read and write their own profile.
     * @path /users/{userId}
     * @allow (create) User with auth UID 'user_abc' can create a new profile document at /users/user_abc.
     * @deny (create) User with auth UID 'user_xyz' cannot create a profile document at /users/user_abc.
     * @allow (get) User with auth UID 'user_abc' can read their profile document at /users/user_abc.
     * @deny (get) User with auth UID 'user_xyz' cannot read the profile document at /users/user_abc.
     * @allow (update) User with auth UID 'user_abc' can update their profile document at /users/user_abc.
     * @deny (update) User with auth UID 'user_xyz' cannot update the profile document at /users/user_abc.
     * @allow (delete) User with auth UID 'user_abc' can delete their profile document at /users/user_abc.
     * @deny (delete) User with auth UID 'user_xyz' cannot delete the profile document at /users/user_abc.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }
      function isOwner(userId) {
        return request.auth.uid == userId;
      }
      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces access control for transaction documents under a user's profile.
     *              Only the user with the matching user ID can read and write their own transactions.
     * @path /users/{userId}/transactions/{transactionId}
     * @allow (create) User with auth UID 'user_abc' can create a new transaction document at /users/user_abc/transactions/transaction_123.
     * @deny (create) User with auth UID 'user_xyz' cannot create a transaction document at /users/user_abc/transactions/transaction_123.
     * @allow (get) User with auth UID 'user_abc' can read their transaction document at /users/user_abc/transactions/transaction_123.
     * @deny (get) User with auth UID 'user_xyz' cannot read the transaction document at /users/user_abc/transactions/transaction_123.
     * @allow (update) User with auth UID 'user_abc' can update their transaction document at /users/user_abc/transactions/transaction_123.
     * @deny (update) User with auth UID 'user_xyz' cannot update the transaction document at /users/user_abc/transactions/transaction_123.
     * @allow (delete) User with auth UID 'user_abc' can delete their transaction document at /users/user_abc/transactions/transaction_123.
     * @deny (delete) User with auth UID 'user_xyz' cannot delete the transaction document at /users/user_abc/transactions/transaction_123.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/transactions/{transactionId} {
      function isSignedIn() {
        return request.auth != null;
      }
      function isOwner(userId) {
        return request.auth.uid == userId;
      }
      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces access control for debt documents under a user's profile.
     *              Only the user with the matching user ID can read and write their own debts.
     * @path /users/{userId}/debts/{debtId}
     * @allow (create) User with auth UID 'user_abc' can create a new debt document at /users/user_abc/debts/debt_123.
