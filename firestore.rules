rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    /**
     * @description Secures the /users/{userId} document.
     * @path /users/{userId}
     * @allow (create) - Authenticated user can create their own user document.
     * @allow (get) - Authenticated user can get their own user document.
     * @allow (update) - Authenticated user can update their own user document.
     * @allow (delete) - Authenticated user can delete their own user document.
     * @deny (create) - If the user ID in the path does not match the authenticated user's ID.
     * @deny (get) - If the user ID in the path does not match the authenticated user's ID.
     * @deny (update) - If the user ID in the path does not match the authenticated user's ID.
     * @deny (delete) - If the user ID in the path does not match the authenticated user's ID.
     * @principle Enforces document ownership.
     */
    match /users/{userId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isOwner(userId);
      allow delete: if isSignedIn() && isOwner(userId);
    }

    /**
     * @description Secures the /users/{userId}/incomes/{incomeId} collection.
     * @path /users/{userId}/incomes/{incomeId}
     * @allow (create) - Authenticated user can create an income document under their user ID.
     * @allow (get) - Authenticated user can get their own income document.
     * @allow (update) - Authenticated user can update their own income document.
     * @allow (delete) - Authenticated user can delete their own income document.
     * @deny (create) - If the user ID in the path does not match the authenticated user's ID.
     * @deny (get) - If the user ID in the path does not match the authenticated user's ID.
     * @deny (update) - If the user ID in the path does not match the authenticated user's ID.
     * @deny (delete) - If the user ID in the path does not match the authenticated user's ID.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/incomes/{incomeId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isSignedIn() && request.auth.uid == userId;
      allow delete: if isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Secures the /users/{userId}/expenses/{expenseId} collection.
     * @path /users/{userId}/expenses/{expenseId}
     * @allow (create) - Authenticated user can create an expense document under their user ID.
     * @allow (get) - Authenticated user can get their own expense document.
     * @allow (update) - Authenticated user can update their own expense document.
     * @allow (delete) - Authenticated user can delete their own expense document.
     * @deny (create) - If the user ID in the path does not match the authenticated user's ID.
     * @deny (get) - If the user ID in the path does not match the authenticated user's ID.
     * @deny (update) - If the user ID in the path does not match the authenticated user's ID.
     * @deny (delete) - If the user ID in the path does not match the authenticated user's ID.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/expenses/{expenseId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isSignedIn() && request.auth.uid == userId;
      allow delete: if isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Secures the /users/{userId}/creditors/{creditorId} collection.
     * @path /users/{userId}/creditors/{creditorId}
     * @allow (create) - Authenticated user can create a creditor document under their user ID.
     * @allow (get) - Authenticated user can get their own creditor document.
     * @allow (update) - Authenticated user can update their own creditor document.
     * @allow (delete) - Authenticated user can delete their own creditor document.
     * @deny (create) - If the user ID in the path does not match the authenticated user's ID.
     * @deny (get) - If the user ID in the path does not match the authenticated user's ID.
     * @deny (update) - If the user ID in the path does not match the authenticated user's ID.
     * @deny (delete) - If the user ID in the path does not match the authenticated user's ID.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/creditors/{creditorId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isSignedIn() && request.auth.uid == userId;
      allow delete: if isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Secures the /users/{userId}/debtors/{debtorId} collection.
     * @path /users/{userId}/debtors/{debtorId}
     * @allow (create) - Authenticated user can create a debtor document under their user ID.
     * @allow (get) - Authenticated user can get their own debtor document.
     * @allow (update) - Authenticated user can update their own debtor document.
     * @allow (delete) - Authenticated user can delete their own debtor document.
     * @deny (create) - If the user ID in the path does not match the authenticated user's ID.
     * @deny (get) - If the user ID in the path does not match the authenticated user's ID.
     * @deny (update) - If the user ID in the path does not match the authenticated user's ID.
     * @deny (delete) - If the user ID in the path does not match the authenticated user's ID.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/debtors/{debtorId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isSignedIn() && request.auth.uid == userId;
      allow delete: if isSignedIn() && request.auth.uid == userId;
    }
  }
}