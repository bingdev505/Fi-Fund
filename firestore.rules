rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows a user to read and write their own profile data.
     * @path /users/{userId}
     * @allow (create) User with ID 'testUID' can create their profile if authenticated as 'testUID'.
     * @deny (create) User with ID 'testUID' cannot create a profile for 'otherUID'.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource.data != null;
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false; // Listing all users is not permitted.
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Allows a user to read and write their own transaction data (income and expenses).
     * @path /users/{userId}/transactions/{transactionId}
     * @allow (create) User with ID 'testUID' can create a transaction in their own transactions collection if authenticated as 'testUID'.
     * @deny (create) User with ID 'testUID' cannot create a transaction in 'otherUID's transactions collection.
     * @principle Restricts access to a user's own data tree.
     */
    match /users/{userId}/transactions/{transactionId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource.data != null;
      }
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Allows a user to read and write their own debt data (creditors and debtors).
     * @path /users/{userId}/debts/{debtId}
     * @allow (create) User with ID 'testUID' can create a debt entry in their own debts collection if authenticated as 'testUID'.
     * @deny (create) User with ID 'testUID' cannot create a debt entry in 'otherUID's debts collection.
     * @principle Restricts access to a user's own data tree.
     */
    match /users/{userId}/debts/{debtId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource.data != null;
      }
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Allows a user to read and write their own bank account data.
     * @path /users/{userId}/bankAccounts/{accountId}
     * @allow (create) User with ID 'testUID' can create a bank account in their own bank accounts collection if authenticated as 'testUID'.
     * @deny (create) User with ID 'testUID' cannot create a bank account in 'otherUID's bank accounts collection.
     * @principle Restricts access to a user's own data tree.
     */
    match /users/{userId}/bankAccounts/{accountId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource.data != null;
      }
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Allows a user to read and write their own chat message history.
     * @path /users/{userId}/chatHistory/{messageId}
     * @allow (create) User with ID 'testUID' can create a chat message in their own chat history collection if authenticated as 'testUID'.
     * @deny (create) User with ID 'testUID' cannot create a chat message in 'otherUID's chat history collection.
     * @principle Restricts access to a user's own data tree.
     */
    match /users/{userId}/chatHistory/{messageId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource.data != null;
      }
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }
  }
}