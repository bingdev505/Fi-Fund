/**
 * @file Firestore Security Rules
 * @description This ruleset is configured to deny all access for prototyping purposes. When the application
 * is ready for production, the rules can be updated to implement more specific access control.
 *
 * Core Philosophy: Deny all access until specific rules are implemented.
 * Data Structure: Data is nested under /users/{userId}, but no access is granted at this time.
 * Key Security Decisions: All read and write operations are denied to ensure no data is exposed during
 * prototyping.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Denies all access to user documents during prototyping.
     * @path /users/{userId}
     * @allow None - All operations are denied.
     * @deny Any operation.
     * @principle Deny all access during prototyping.
     */
    match /users/{userId} {
      allow get: if false;
      allow list: if false;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Denies all access to transaction documents during prototyping.
     * @path /users/{userId}/transactions/{transactionId}
     * @allow None - All operations are denied.
     * @deny Any operation.
     * @principle Deny all access during prototyping.
     */
    match /users/{userId}/transactions/{transactionId} {
      allow get: if false;
      allow list: if false;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Denies all access to debt documents during prototyping.
     * @path /users/{userId}/debts/{debtId}
     * @allow None - All operations are denied.
     * @deny Any operation.
     * @principle Deny all access during prototyping.
     */
    match /users/{userId}/debts/{debtId} {
      allow get: if false;
      allow list: if false;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Denies all access to bank account documents during prototyping.
     * @path /users/{userId}/bankAccounts/{accountId}
     * @allow None - All operations are denied.
     * @deny Any operation.
     * @principle Deny all access during prototyping.
     */
    match /users/{userId}/bankAccounts/{accountId} {
      allow get: if false;
      allow list: if false;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Denies all access to chat message documents during prototyping.
     * @path /users/{userId}/chatHistory/{messageId}
     * @allow None - All operations are denied.
     * @deny Any operation.
     * @principle Deny all access during prototyping.
     */
    match /users/{userId}/chatHistory/{messageId} {
      allow get: if false;
      allow list: if false;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }
  }
}