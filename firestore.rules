/**
 * @fileoverview Firestore Security Rules for the application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model. Users can only
 * read and write data associated with their own user ID. This ensures
 * data privacy and prevents unauthorized access.
 *
 * Data Structure:
 * All data is nested under /users/{userId}, with subcollections for
 * transactions, debts, bank accounts, and chat history. This hierarchical
 * structure simplifies the security rules and ensures clear ownership.
 *
 * Key Security Decisions:
 * - Users can only manage their own profile and related data.
 * - No public data or shared resources are supported in this version.
 * - List operations are restricted to the owner of the data.
 *
 * Denormalization for Authorization:
 * The rules rely on the `userId` field within each document to match
 * the `{userId}` path segment. This avoids costly `get()` operations
 * and enables efficient authorization checks.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Enforces authentication for all requests.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the requested user ID matches the authenticated user ID.
     * @param {string} userId - The user ID to compare against.
     * @return {boolean} - True if the user IDs match, false otherwise.
     *
     * Example Usage:
     * isOwner("some_user_id")
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the requested user ID matches the authenticated user ID and that the resource exists
     * @param {string} userId - The user ID to compare against.
     * @return {boolean} - True if the user IDs match, false otherwise.
     *
     * Example Usage:
     * isExistingOwner("some_user_id")
     */
    function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
    }

    /**
     * @description Rules for the /users/{userId} document.
     * @path /users/{userId}
     * @allow (create) - User with auth UID 'user123' can create their own user document at /users/user123 if the document's id field also contains 'user123'.
     * @allow (get, update, delete) - User with auth UID 'user123' can read, update and delete their own user document at /users/user123.
     * @deny (create) - User with auth UID 'user456' cannot create a user document at /users/user123.
     * @deny (update, delete) - User with auth UID 'user456' cannot update or delete the user document at /users/user123.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;

      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for the /users/{userId}/transactions/{transactionId} collection.
     * @path /users/{userId}/transactions/{transactionId}
     * @allow (create) - User with auth UID 'user123' can create a transaction under /users/user123/transactions/txn1.
     * @allow (get, update, delete) - User with auth UID 'user123' can read, update, and delete a transaction under /users/user123/transactions/txn1.
     * @deny (create) - User with auth UID 'user456' cannot create a transaction under /users/user123/transactions/txn1.
     * @deny (update, delete) - User with auth UID 'user456' cannot update or delete a transaction under /users/user123/transactions/txn1.
     * @principle Restricts access to a user's own data tree.
     */
    match /users/{userId}/transactions/{transactionId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

     /**
      * @description Rules for the /users/{userId}/debts/{debtId} collection.
      * @path /users/{userId}/debts/{debtId}
      * @allow (create) - User with auth UID 'user123' can create a debt under /users/user123/debts/debt1.
      * @allow (get, update, delete) - User with auth UID 'user123' can read, update, and delete a debt under /users/user123/debts/debt1.
      * @deny (create) - User with auth UID 'user456' cannot create a debt under /users/user123/debts/debt1.
      * @deny (update, delete) - User with auth UID 'user456' cannot update or delete a debt under /users/user123/debts/debt1.
      * @principle Restricts access to a user's own data tree.
      */
    match /users/{userId}/debts/{debtId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

     /**
      * @description Rules for the /users/{userId}/bankAccounts/{accountId} collection.
      * @path /users/{userId}/bankAccounts/{accountId}
      * @allow (create) - User with auth UID 'user123' can create a bank account under /users/user123/bankAccounts/account1.
      * @allow (get, update, delete) - User with auth UID 'user123' can read, update, and delete a bank account under /users/user123/bankAccounts/account1.
      * @deny (create) - User with auth UID 'user456' cannot create a bank account under /users/user123/bankAccounts/account1.
      * @deny (update, delete) - User with auth UID 'user456' cannot update or delete a bank account under /users/user123/bankAccounts/account1.
      * @principle Restricts access to a user's own data tree.
      */
    match /users/{userId}/bankAccounts/{accountId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for the /users/{userId}/chatHistory/{messageId} collection.
     * @path /users/{userId}/chatHistory/{messageId}
     * @allow (create) - User with auth UID 'user123' can create a chat message under /users/user123/chatHistory/message1.
     * @allow (get, update, delete) - User with auth UID 'user123' can read, update, and delete a chat message under /users/user123/chatHistory/message1.
     * @deny (create) - User with auth UID 'user456' cannot create a chat message under /users/user123/chatHistory/message1.
     * @deny (update, delete) - User with auth UID 'user456' cannot update or delete a chat message under /users/user123/chatHistory/message1.
     * @principle Restricts access to a user's own data tree.
     */
    match /users/{userId}/chatHistory/{messageId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }
  }
}