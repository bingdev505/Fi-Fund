      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces access control for bank account documents under a user's profile.
     *              Only the user with the matching user ID can read and write their own bank accounts.
     * @path /users/{userId}/bankAccounts/{accountId}
     * @allow (create) User with auth UID 'user_abc' can create a new bank account document at /users/user_abc/bankAccounts/account_123.
     * @deny (create) User with auth UID 'user_xyz' cannot create a bank account document at /users/user_abc/bankAccounts/account_123.
     * @allow (get) User with auth UID 'user_abc' can read their bank account document at /users/user_abc/bankAccounts/account_123.
     * @deny (get) User with auth UID 'user_xyz' cannot read the bank account document at /users/user_abc/bankAccounts/account_123.
     * @allow (update) User with auth UID 'user_abc' can update their bank account document at /users/user_abc/bankAccounts/account_123.
     * @deny (update) User with auth UID 'user_xyz' cannot update the bank account document at /users/user_abc/bankAccounts/account_123.
     * @allow (delete) User with auth UID 'user_abc' can delete their bank account document at /users/user_abc/bankAccounts/account_123.
     * @deny (delete) User with auth UID 'user_xyz' cannot delete the bank account document at /users/user_abc/bankAccounts/account_123.
