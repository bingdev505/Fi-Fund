/**
 * @fileoverview Firestore Security Rules for the Personal Finance App.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model. Each user has full
 * control over their own data, and no access to other users' data.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profile information.
 * - /users/{userId}/transactions/{transactionId}: Stores income and expense transactions.
 * - /users/{userId}/debts/{debtId}: Stores debt information (creditors and debtors).
 * - /users/{userId}/bankAccounts/{accountId}: Stores bank account information.
 * - /users/{userId}/chatHistory/{messageId}: Stores chat message history.
 *
 * Key Security Decisions:
 * - Users can only access their own data.
 * - Data schema is not strictly enforced in this prototyping phase, but ownership
 *   is validated to prevent cross-user data access.
 * - Listing of collections is allowed only for the owner.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profile documents.
     * @path /users/{userId}
     * @allow (create) - User with matching UID can create their own profile.
     * @allow (get, update, delete) - User with matching UID can read, update, and delete their own profile.
     * @deny (create) - User cannot create a profile with a different UID.
     * @deny (get, update, delete) - User cannot read, update, or delete another user's profile.
     * @principle Enforces document ownership; users can only manage their own profiles.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
          return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false; // User listing is disallowed

      // Allow the user to create their own profile, but enforce that the userId in the document
      // matches their auth UID.
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == userId;

      // For updates, ensure the user is signed in and is the owner of the existing document.
      // Also, ensure that the userId field is immutable.
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;

      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to transaction documents (income and expenses).
     * @path /users/{userId}/transactions/{transactionId}
     * @allow (create, get, list, update, delete) - User with matching UID can manage their own transactions.
     * @deny (create, get, list, update, delete) - User cannot manage transactions for other users.
     * @principle Enforces document ownership; users can only manage their own transactions.
     */
    match /users/{userId}/transactions/{transactionId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
          return isOwner(userId) && resource != null;
      }
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to debt documents (creditors and debtors).
     * @path /users/{userId}/debts/{debtId}
     * @allow (create, get, list, update, delete) - User with matching UID can manage their own debts.
     * @deny (create, get, list, update, delete) - User cannot manage debts for other users.
     * @principle Enforces document ownership; users can only manage their own debts.
     */
    match /users/{userId}/debts/{debtId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
          return isOwner(userId) && resource != null;
      }
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to bank account documents.
     * @path /users/{userId}/bankAccounts/{accountId}
     * @allow (create, get, list, update, delete) - User with matching UID can manage their own bank accounts.
     * @deny (create, get, list, update, delete) - User cannot manage bank accounts for other users.
     * @principle Enforces document ownership; users can only manage their own bank accounts.
     */
    match /users/{userId}/bankAccounts/{accountId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
          return isOwner(userId) && resource != null;
      }
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to chat history documents.
     * @path /users/{userId}/chatHistory/{messageId}
     * @allow (create, get, list, update, delete) - User with matching UID can manage their own chat history.
     * @deny (create, get, list, update, delete) - User cannot manage chat history for other users.
     * @principle Enforces document ownership; users can only manage their own chat history.
     */
    match /users/{userId}/chatHistory/{messageId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
          return isOwner(userId) && resource != null;
      }
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }
  }
}