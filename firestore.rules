/**
 * @fileoverview Firestore Security Rules for the application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model. Users can only
 * create, read, update, and delete data associated with their own user ID.
 *
 * Data Structure:
 * All data is nested under /users/{userId}, ensuring clear ownership.
 * - /users/{userId}: User profile information.
 * - /users/{userId}/transactions/{transactionId}: Financial transactions.
 * - /users/{userId}/debts/{debtId}: Debt information.
 * - /users/{userId}/bankAccounts/{accountId}: Bank account details.
 *
 * Key Security Decisions:
 * - Users can only manage their own data.
 * - Data consistency is enforced between the path and the document's internal fields
 *   to prevent unauthorized data access.
 * - Listing collections is restricted to the owner of the data.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Enforces user-ownership for user profiles. Users can only
     * create their own profile and subsequently read, update, and delete it.
     * @path /users/{userId}
     * @allow (create) - User 'abc' can create their profile at /users/abc if request.auth.uid == 'abc'.
     * @allow (get, update, delete) - User 'abc' can read, update, and delete their profile at /users/abc if request.auth.uid == 'abc'.
     * @deny (create) - User 'def' cannot create a profile at /users/abc.
     * @deny (update) - User 'def' cannot update the profile at /users/abc.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces user-ownership for transactions. Users can only
     * create, read, update, and delete transactions associated with their user ID.
     * @path /users/{userId}/transactions/{transactionId}
     * @allow (create) - User 'abc' can create a transaction under /users/abc/transactions/123 if request.auth.uid == 'abc'.
     * @allow (get, list, update, delete) - User 'abc' can manage their transactions under /users/abc/transactions/.
     * @deny (create) - User 'def' cannot create a transaction under /users/abc/transactions/123.
     * @deny (update) - User 'def' cannot update a transaction under /users/abc/transactions/123.
     * @principle Enforces document ownership for writes and restricts access to a user's own data tree.
     */
    match /users/{userId}/transactions/{transactionId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces user-ownership for debts. Users can only
     * create, read, update, and delete debts associated with their user ID.
     * @path /users/{userId}/debts/{debtId}
     * @allow (create) - User 'abc' can create a debt under /users/abc/debts/123 if request.auth.uid == 'abc'.
     * @allow (get, list, update, delete) - User 'abc' can manage their debts under /users/abc/debts/.
     * @deny (create) - User 'def' cannot create a debt under /users/abc/debts/123.
     * @deny (update) - User 'def' cannot update a debt under /users/abc/debts/123.
     * @principle Enforces document ownership for writes and restricts access to a user's own data tree.
     */
    match /users/{userId}/debts/{debtId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces user-ownership for bank accounts. Users can only
     * create, read, update, and delete bank accounts associated with their user ID.
     * @path /users/{userId}/bankAccounts/{accountId}
     * @allow (create) - User 'abc' can create a bank account under /users/abc/bankAccounts/123 if request.auth.uid == 'abc'.
     * @allow (get, list, update, delete) - User 'abc' can manage their bank accounts under /users/abc/bankAccounts/.
     * @deny (create) - User 'def' cannot create a bank account under /users/abc/bankAccounts/123.
     * @deny (update) - User 'def' cannot update a bank account under /users/abc/bankAccounts/123.
     * @principle Enforces document ownership for writes and restricts access to a user's own data tree.
     */
    match /users/{userId}/bankAccounts/{accountId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }
  }
}